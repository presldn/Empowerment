<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".view.fragments.QuoteSlidePagerFragment" android:orientation="vertical" android:gravity="center"
              android:padding="24dp">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/messageView" android:textSize="18sp"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/authorView" android:gravity="end"
            android:textSize="18sp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_gravity="end" android:gravity="end">
        <ImageButton
                android:src="@drawable/ic_favorite_outline_black_24dp"
                android:layout_width="wrap_content"
                style="?buttonBarButtonStyle"
                android:layout_height="wrap_content" android:id="@+id/imageButton" android:layout_weight="0"/>
        <ImageButton
                android:src="@drawable/ic_share_black_24dp"
                android:layout_width="wrap_content"
                style="?buttonBarButtonStyle"
                android:layout_height="wrap_content" android:id="@+id/imageButton2" android:layout_weight="0"/>
    </LinearLayout>
</LinearLayout>